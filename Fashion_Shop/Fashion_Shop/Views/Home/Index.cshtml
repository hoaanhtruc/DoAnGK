@model PagedList.IPagedList<FashionShopConection.SanPham>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Sản phẩm mới</h2>
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img class="fd" src="@item.HinhAnh" alt="" />
                        <h2>@item.GiaSP</h2>
                        <p>@item.TenSP</p>
                        <a href="@Url.Action("Index","SanPham")" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                    </div>
                    <div class="product-overlay">
                        <div class="overlay-content">
                            <h2>@item.GiaSP</h2>
                            <p>@item.TenSP</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </div>
                    </div>
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href="@Url.Action("Detail", "SanPham",new { id = item.idSP})"><i class="fa fa-plus-square"></i>Xem chi tiết</a></li>
                        <li><a href=""><i class="fa fa-plus-square"></i>Đánh giá</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }

</div>

<div>
    @Html.PagedListPager(Model, page => Url.Action("/index", "SanPham", new { page }))
</div>



<style>
    img.fd{
        height: 369px;
        width: 241.75px;    
    }
</style>