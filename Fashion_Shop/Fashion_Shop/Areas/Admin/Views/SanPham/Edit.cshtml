@model  Fashion_Shop.Areas.Admin.Models.SP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout0.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm(Html.BeginForm("Edit", "SanPham", FormMethod.Post,
                                                                            new { enctype = "multipart/form-data" })))
{

    @Html.AntiForgeryToken()
   

    <div class="form-horizontal">
        <h4>Sửa Sản Phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
